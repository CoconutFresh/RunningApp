<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningFragment">

    <TextView
        android:id="@+id/tv_Running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Running"
        android:textSize="30dp" />

    <Button
        android:id="@+id/bt_stopRun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Running"
        android:layout_centerHorizontal="true"
        android:text="Stop"/>

    <Chronometer
        android:id="@+id/timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_Running"
        android:layout_toLeftOf="@id/bt_stopRun"
        android:layout_marginRight="15dp"
        android:textSize="25dp"/>

    <TextView
        android:id="@+id/tv_totalDist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_Running"
        android:layout_toRightOf="@id/bt_stopRun"
        android:layout_marginLeft="15dp"
        android:textSize="25dp"
        android:text="0.00"/>




</RelativeLayout>