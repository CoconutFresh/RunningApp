<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningFragment">

    <LinearLayout
        android:id="@+id/lin_data"
        android:layout_width="fill_parent"
        android:layout_height="175dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:orientation="horizontal"
        android:weightSum="2"
        android:divider="@color/green"
        android:showDividers="middle">

        <RelativeLayout
            android:id="@+id/lin_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/tv_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_weight="1"
                android:text="Time"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"/>

            <Chronometer
                android:id="@+id/cm_timer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_weight="1" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/lin_dist"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            >

            <TextView
                android:id="@+id/tv_dist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:text="Distance"
                android:textSize="20dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:layout_alignParentTop="true"/>

            <TextView
                android:id="@+id/tv_totalDist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:layout_centerVertical="true"
                android:textSize="35dp"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="0.00"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_avgPace"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_below="@+id/lin_data"
        android:background="@drawable/custom_border">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Average Pace"
            android:textSize="20dp"
            android:textAlignment="center"
            android:textColor="@color/black"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textSize="35dp"
            android:textAlignment="center"
            android:textColor="@color/black"

            android:layout_centerVertical="true"/>

    </RelativeLayout>

</RelativeLayout>