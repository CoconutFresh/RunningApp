<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RunningFragment">

    <TextView
        android:id="@+id/tv_Running"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/lin_data"
        android:text="Running"
        android:textSize="30dp" />

    <LinearLayout
        android:id="@+id/lin_data"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal"
        android:paddingLeft="4.0dp"
        android:paddingRight="4.0dp"
        android:paddingTop="5.0dp"
        android:paddingBottom="1.0dp"
        android:gravity="center_horizontal">

        <Chronometer
            android:id="@+id/cm_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_Running"
            android:layout_toLeftOf="@id/tv_totalDist"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/tv_totalDist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:text="0.00" />

    </LinearLayout>

</RelativeLayout>